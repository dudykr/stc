{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build vscode extension",
      "type": "npm",
      "script": "compile",
      "path": "editors/vscode/",
      "problemMatcher": ["$tsc"],
      "group": "build",
      "detail": "tsc -b"
    },
    {
      "label": "Build server",
      "group": "build",
      "type": "shell",
      "command": "cargo build -p stc-ts-lang-server",
      "problemMatcher": "$rustc"
    },

    {
      "label": "Build server and extension",
      "dependsOn": ["Build server", "Build vscode extension"],
      "problemMatcher": "$rustc"
    }
  ]
}
