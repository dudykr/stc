{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch Client",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
      "outFiles": ["${workspaceRoot}/editors/vscode/out/**/*.js"],
      "preLaunchTask": {
        "type": "npm",
        "script": "watch",
        "cwd": "${workspaceRoot}/editors/vscode"
      }
    },
    {
      // Used for testing the extension with a local build of the LSP server (in `target/debug`).
      "name": "Run extension (Debug Build)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/editors/vscode"
      ],
      "preLaunchTask": "Build server"
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": ["Launch Client", "Run extension (Debug Build)"]
    }
  ]
}
